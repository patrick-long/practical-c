{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build active file",
			"command": "gcc",
			"args": [
				"-g",
				"-Wall",
				"${file}",
				"-O0",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
		}
	]
}
